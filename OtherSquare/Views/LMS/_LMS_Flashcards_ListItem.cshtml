@model OtherSquare.ViewModels.ListItemViewModel
@using Newtonsoft.Json;

@{
    string archived = Model.IsArchived ? "archived" : "";
    string selected = Model.Selected ? "checked" : "";
}

<div class="item-list-item @archived" data-guid="@Model.Guid" data-title="@Model.Title" data-type="">
    <div class="item-title">@Model.Title</div>
    @{
        if (Model.ScoreIsNA)
        {
            <div>N/A</div>
        }
        else
        {
            <div>@Model.Score %</div>
        }
    }
    <input type="checkbox" @selected />
</div>