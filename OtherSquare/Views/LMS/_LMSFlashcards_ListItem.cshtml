@model OtherSquare.ViewModels.ListItemViewModel
@using Newtonsoft.Json;

@{
    string archived = Model.IsArchived ? "archived" : "";
    string selected = Model.Selected ? "checked" : "";
    string obj = Html.Raw(JsonConvert.SerializeObject(Model.SelectedObject)).ToString();
}

<div class="item-list-item @archived" data-object="@obj" data-type="">
    <div>@Model.Title</div>
    @{
        if (Model.ScoreIsNA)
        {
            <div>N/A</div>
        }
        else
        {
            <div>@Model.Score %</div>
        }
    }
    <input type="checkbox" @selected />
</div>