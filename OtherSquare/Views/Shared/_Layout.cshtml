@using Microsoft.AspNet.Identity

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/jqueryUi")
    @Scripts.Render("~/bundles/jquery")
</head>
<body>
    <form id="__AjaxAntiForgeryForm" action="#" method="post">@Html.AntiForgeryToken()</form>
    @if (Request.IsAuthenticated)
    {
    <div class="site-nav-bar">
        <button id="LMS" class="site-nav tab" data-location="/LMS/Flashcards">LMS</button>
        <button class="site-nav tab">Tasks</button>
        <button class="site-nav tab">Inventory</button>
        <button class="site-nav tab">Finance</button>
        <button class="site-nav tab">Health</button>

        <button id="logout" class="log-out">Log Out</button>
    </div>
        <div>
            @RenderBody()
        </div>
    }
    else
    {
        <div class="site-nav-bar">
            <button id="login" class="site-nav log-in" data-location="/Account/Login">LogIn</button>
        </div>
        <div>
            @RenderBody()
        </div>
    }
    <div id="message-overlay" class="overlay hide">
        <div class="message"></div>
    </div>
    <div id="modal-overlay" class="overlay hide">
        <div class="modal">Loading</div>
    </div>
</body>
@Scripts.Render("~/bundles/main")
</html>
