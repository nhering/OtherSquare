@using Microsoft.AspNet.Identity

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
</head>
<body>
    <form id="__AjaxAntiForgeryForm" action="#" method="post">@Html.AntiForgeryToken()</form>
    @if (Request.IsAuthenticated)
    {
        <div class="site-nav">
            <button id="entities" class="site-nav-btn" data-location="/Entity/Search">Entities</button>
            <button id="Study" class="site-nav-btn" data-location="/Study">Study</button>

            <button id="logout" style="float:right;">LogOut</button>
        </div>
        <div>
            @RenderBody()
        </div>
    }
    else
    {
        <div class="site-nav">
            <button id="login" class="site-nav-btn" data-location="/Account/Login">LogIn</button>
        </div>
        <div>
            @RenderBody()
        </div>
    }
</body>
@Scripts.Render("~/bundles/main")
</html>
